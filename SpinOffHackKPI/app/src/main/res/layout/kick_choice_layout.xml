<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Arrest vote"
        android:id="@+id/choice_text_view"
        android:textAlignment="center"
        android:textSize="@dimen/regular_text_view_text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choice_text_view"
        android:id="@+id/choice_text_view1"
        android:textAlignment="center"
        android:textSize="@dimen/regular_text_view_text_size"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arrest_choice_list"/>

</LinearLayout>